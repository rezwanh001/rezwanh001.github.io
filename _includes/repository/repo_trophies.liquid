{%- assign username = include.username | default: 'rezwanh001' -%}

<div class="repo p-2 text-center" style="width: 100%;">
  <a href="https://github.com/ryo-ma/github-profile-trophy" style="width: 100%;">
    <!-- Desktop View: Shows up to 7 columns -->
    <span class="d-none d-sm-none d-md-block">
      <img
        class="repo-img-light"
        alt="{{ username }}'s Trophies"
        src="https://github-profile-trophy.vercel.app/?username={{ username }}&theme={{ site.repo_trophies.theme_light | default: 'flat' }}&column=7&margin-w=15&margin-h=15"
        style="width: 100%;"
      >
      <img
        class="repo-img-dark"
        alt="{{ username }}'s Trophies"
        src="https://github-profile-trophy.vercel.app/?username={{ username }}&theme={{ site.repo_trophies.theme_dark | default: 'onedark' }}&column=7&margin-w=15&margin-h=15"
        style="width: 100%;"
      >
    </span>

    <!-- Tablet View: Shows up to 5 columns -->
    <span class="d-none d-sm-block d-md-none">
      <img
        class="repo-img-light"
        alt="{{ username }}'s Trophies"
        src="https://github-profile-trophy.vercel.app/?username={{ username }}&theme={{ site.repo_trophies.theme_light | default: 'flat' }}&column=5&margin-w=15&margin-h=15"
        style="width: 100%;"
      >
      <img
        class="repo-img-dark"
        alt="{{ username }}'s Trophies"
        src="https://github-profile-trophy.vercel.app/?username={{ username }}&theme={{ site.repo_trophies.theme_dark | default: 'onedark' }}&column=5&margin-w=15&margin-h=15"
        style="width: 100%;"
      >
    </span>

    <!-- Mobile View: Shows up to 4 columns -->
    <span class="d-block d-sm-none">
      <img
        class="repo-img-light"
        alt="{{ username }}'s Trophies"
        src="https://github-profile-trophy.vercel.app/?username={{ username }}&theme={{ site.repo_trophies.theme_light | default: 'flat' }}&column=4&margin-w=10&margin-h=10"
        style="width: 100%;"
      >
      <img
        class="repo-img-dark"
        alt="{{ username }}'s Trophies"
        src="https://github-profile-trophy.vercel.app/?username={{ username }}&theme={{ site.repo_trophies.theme_dark | default: 'onedark' }}&column=4&margin-w=10&margin-h=10"
        style="width: 100%;"
      >
    </span>
  </a>
</div>